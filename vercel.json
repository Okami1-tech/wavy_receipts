{
  "version": 2,
  "functions": {
    "api/api.js": { 
      "runtime": "@vercel/node@2.1.0"
    }
  },
  "routes": [
    {
      "src": "/api/validate-key",
      "dest": "/api/api.js", 
      "methods": ["POST"],
      "headers": {
        "x-handler": "validate-key"
      }
    },
    {
      "src": "/api/receipts",
      "dest": "/api/api.js",
      "methods": ["GET", "POST"],
      "headers": {
        "x-handler": "receipts"
      }
    },
    {
      "src": "/api/receipt/([^/]+)",
      "dest": "/api/api.js?token=$1",
      "methods": ["GET"],
      "headers": {
        "x-handler": "receipt-by-token"
      }
    },
    {
      "src": "/api/paystack-callback",
      "dest": "/api/api.js", 
      "methods": ["POST"],
      "headers": {
        "x-handler": "paystack-callback"
      }
    }
  ]
}
